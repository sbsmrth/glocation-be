generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum EstadoProyecto {
  EN_PROGRESO
  FINALIZADO
  CANCELADO
  SIN_INICIAR
  BLOQUEADO
}

model Proyecto {
  id                 String         @id @default(uuid())
  nombre             String         @unique
  descripcion        String?
  estado             EstadoProyecto @default(SIN_INICIAR)
  fechaInicio       DateTime?
  fechaFin           DateTime?
  fechaCreation      DateTime       @default(now())
  fechaActualizacion DateTime       @updatedAt
}
